{

  "manifest_version": 2,
  "name": "TwitchTime",
  "version": "1.1",
  "applications": {
    "gecko": {
      "id": "twitchtime@notactuallytwitch.com",
      "strict_min_version": "53.0"
    }
  },

  "description": "Adds an indicator of how long you have watched a Twitch channel.",
  "homepage_url": "https://github.com/swpease/TwitchTime",

  "icons": {
    "48": "icons/twitch-time-48.png",
    "96": "icons/twitch-time-48@2x.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": ["content_scripts/content_script.js"],
      "css": ["content_scripts/content_script.css"]
    }
  ],

  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },

  "permissions": [
    "storage"
  ]

}
